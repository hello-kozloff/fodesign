include ../../../core/bemto

mixin header(buttons)
    +b("header").header
        +e.grid
            +e.content
                +e("a")(href="index.html").home
                    +e("svg").logo
                        polygon(points="0,0 8,8 0,8 8,16 0,16 8,24 8,16 16,16 8,8 16,8 16,0")

                    +e("span").sitename fo.design

                +e("p").description Дизайн студия Андрея Фомина

            +e.buttons
                if (buttons.themefy !== false)
                    +e("button")(type="button").button._themefy
                        i(class="icon-night")

                if (buttons.hamburger !== false)
                    +e("button")(type="button").button._hamburger
                        span
                        span
                        span

    include ../../navigation/navigation